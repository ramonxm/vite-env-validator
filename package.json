{
  "name": "@rxm/vite-env-validator",
  "version": "1.0.0",
  "description": "A Vite plugin for environment variable validation with support for Zod, Yup, and Joi",
  "keywords": [
    "vite",
    "plugin",
    "environment",
    "validation",
    "zod",
    "yup",
    "joi",
    "env"
  ],
  "author": "Ramon Xavier",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ramonxm/vite-env-validator.git"
  },
  "bugs": {
    "url": "https://github.com/ramonxm/vite-env-validator/issues"
  },
  "homepage": "https://github.com/ramonxm/vite-env-validator#readme",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "preview": "tsup --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist coverage",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm run build",
    "version": "pnpm run build && git add -A dist",
    "postversion": "git push && git push --tags",
    "prepare": "husky install",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "joi": "^17.0.0",
    "yup": "^1.0.0",
    "zod": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@jest/globals": "^30.0.5",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^9.0.0",
    "@semantic-release/npm": "^10.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "semantic-release": "^22.0.0",
    "ts-jest": "^29.0.0",
    "tsup": "^8.0.0",
    "typescript": "~5.9.2",
    "vite": "^7.0.6"
  },
  "dependencies": {
    "unconfig": "^7.3.2"
  }
}
